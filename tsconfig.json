{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*":  ["./src/*"],
      "@/components/*": ["src/client/app/components/*"],
      "@/sprite/*": ["src/client/resources/img/sprite/*"],
      "@/styles": ["src/client/resources/styles/style.scss"],
      "@/resources/*": ["src/client/resources/"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
